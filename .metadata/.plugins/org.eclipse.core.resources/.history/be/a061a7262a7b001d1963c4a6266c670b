package taller3_estructuras_control;
import java.util.*;
public class Taller3 {
	static Scanner sc = new Scanner(System.in);
	public static void main(String args[]) {
		Actividad1();
	}
	
	public static void Actividad1 () {
		System.out.println("Digite 1 para ejecuar la suma con una sentencia for \n Digite 2 para ejecutar la sentencia con while ");	
		int type_sum = sc.nextInt();
		switch(type_sum) {
			case 1: {
				SumWithFor();
				break;
			}
			default: {
				System.out.println("Se ha digitado una opcion no disponible, se ejecutara el tipo 1 Sentencia For: ");	
				SumWithFor();
				break;
				
			}
		}
		
	}
	
	public static void SumWithFor() {
		int number_value = sc.nextInt();
		do {
			System.out.println("Digite el valor numerico positivo: ");	
			number_value = sc.nextInt();
		} while (number_value < 0);
		int sumatoria = 1;
		for (int i = 1; i <= number_value; i++) {
			sumatoria = sumatoria + i;
		}
		System.out.println("La suma de entre 1 y el numero: " + number_value + " es: " + sumatoria);	
	}
}
